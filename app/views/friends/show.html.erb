
<div class="jumbotron">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <p class="lead">
  <%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %> 
  </p>
  <hr class="my-4">

  <div>
  <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary" %> 
  <%= link_to "Back", friends_path, class:"btn btn-dark" %>
  <br/><br/>
  <%= button_to "Remove", @friend,data: { confirm: 'Are you sure?', turbo_confirm: "Are you sure?"  }, method: :delete, class:"btn btn-danger btn-sm" %>
</div>
</div>




